@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@using System.Data;
@model DataTable
<div>
    <div class="header">
        <h2><strong><i class="fa fa-dashboard"></i>@ViewBag.Title</strong></h2>
        <div class="breadcrumb-wrapper">
            <ol class="breadcrumb">
                <li>
                    <a href="/">Home</a>
                </li>
                <li class="active">Dashboard</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                @if (Model.Rows.Count > 0)
                {
                    <div class="col-xlg-12 col-lg-4">
                        <div class="panel">
                            <div class="panel-content widget-small bg-green">
                                <div class="title">
                                    <div class="widget-icon">
                                        <i class="fa fa-image fa-3x"></i>
                                    </div>
                                    <div class="widget-details">
                                        <h1>Destinations</h1>
                                        <span>@Model.Rows[0]["DestinationCount"]</span>
                                    </div>
                                </div>
                                <div class="content">
                                    <div id="stock-virgin-sm"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xlg-12 col-lg-4">
                        <div class="panel">
                            <div class="panel-content widget-small bg-red">
                                <div class="title">
                                    <div class="widget-icon">
                                        <i class="fa fa-briefcase fa-3x"></i>
                                    </div>
                                    <div class="widget-details">
                                        <h1>Packages</h1>
                                        <span>@Model.Rows[0]["PackageCount"]</span>
                                    </div>

                                </div>
                                <div class="content">
                                    <div id="stock-ebay-sm"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xlg-12 col-lg-4">
                        <div class="panel">
                            <div class="panel-content widget-small bg-yellow">
                                <div class="title">
                                    <div class="widget-icon">
                                        <i class="fa fa-hotel fa-3x"></i>
                                    </div>
                                    <div class="widget-details">
                                        <h1>Hotel</h1>
                                        <span>@Model.Rows[0]["HotelCount"]</span>
                                    </div>
                                </div>
                                <div class="content">
                                    <div id="stock-facebook-sm"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xlg-12 col-lg-4">
                        <div class="panel">
                            <div class="panel-content widget-small bg-aero">
                                <div class="title">
                                    <div class="widget-icon">
                                        <i class="fa fa-comment-o fa-3x"></i>
                                    </div>
                                    <div class="widget-details">
                                        <h1>Review</h1>
                                        <span>@Model.Rows[0]["ReviewCount"]</span>
                                    </div>
                                </div>
                                <div class="content">
                                    <div id="stock-facebook-sm"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xlg-12 col-lg-4">
                        <div class="panel">
                            <div class="panel-content widget-small bg-blue">
                                <div class="title">
                                    <div class="widget-icon">
                                        <i class="fa fa-users fa-3x"></i>
                                    </div>
                                    <div class="widget-details">
                                        <h1>Customer</h1>
                                        <span>@Model.Rows[0]["CustomerCount"]</span>
                                    </div>
                                </div>
                                <div class="content">
                                    <div id="stock-facebook-sm"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xlg-12 col-lg-4">
                        <div class="panel">
                            <div class="panel-content widget-small bg-primary-dark">
                                <div class="title">
                                    <div class="widget-icon">
                                        <i class="fa fa-cab fa-3x"></i>
                                    </div>
                                    <div class="widget-details">
                                        <h1>Transport</h1>
                                        <span>@Model.Rows[0]["TransportCount"]</span>
                                    </div>
                                </div>
                                <div class="content">
                                    <div id="stock-facebook-sm"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
        <div class="col-lg-12">
            <div class="widget-infobox">
                <a href="/Destination/Add">
                    <div class="infobox">
                        <div class="left">
                            <i class="fa fa-image bg-green"></i>
                        </div>
                        <div class="right">
                            <div>
                                <span class="c-primary pull-left">Add</span>
                            </div>
                            <div class="txt">Destination</div>
                        </div>
                    </div>
                </a>
                <a href="/Destination/ViewDestinations">
                    <div class="infobox">
                        <div class="left">
                            <i class="fa fa-search bg-blue"></i>
                        </div>
                        <div class="right">
                            <div class="clearfix">
                                <div>
                                    <span class="c-blue pull-left">View</span>
                                </div>
                                <div class="txt c-blue">Destinations</div>
                            </div>
                        </div>
                    </div>
                </a>

                <a href="/Package/Add">
                    <div class="infobox">
                        <div class="left">
                            <i class="fa fa-briefcase bg-orange"></i>
                        </div>
                        <div class="right">
                            <div>
                                <span class="c-orange pull-left">Add</span>
                            </div>
                            <div class="txt c-orange">Package</div>
                        </div>
                    </div>
                </a>
                <a href="/Package/ViewPackages">
                    <div class="infobox">
                        <div class="left">
                            <i class="fa fa-search bg-purple"></i>
                        </div>
                        <div class="right">
                            <div class="clearfix">
                                <div>
                                    <span class="c-purple pull-left">View</span>
                                </div>
                                <div class="txt c-purple">Package</div>
                            </div>
                        </div>
                    </div>
                </a>

                <a href="/TransportRates/Add">
                    <div class="infobox">
                        <div class="left">
                            <i class="fa fa-cab bg-orange"></i>
                        </div>
                        <div class="right">
                            <div>
                                <span class="c-orange pull-left">Add</span>
                            </div>
                            <div class="txt c-orange">Transport</div>
                        </div>
                    </div>
                </a>
                <a href="/TransportRates/ViewTransportRates">
                    <div class="infobox">
                        <div class="left">
                            <i class="fa fa-search bg-purple"></i>
                        </div>
                        <div class="right">
                            <div class="clearfix">
                                <div>
                                    <span class="c-purple pull-left">View</span>
                                </div>
                                <div class="txt c-purple">Transport</div>
                            </div>
                        </div>
                    </div>
                </a>
                <div class="clearfix"></div>
                <a href="#" data-toggle="modal" data-target="#modal-change-password">
                    <div class="infobox">
                        <div class="left">
                            <i class="icon-lock-open bg-green"></i>
                        </div>
                        <div class="right">
                            <div class="clearfix">
                                <div>
                                    <span class="c-green pull-left">Change</span>
                                </div>
                                <div class="txt c-green">Password</div>
                            </div>
                        </div>
                    </div>
                </a>
                <a href="#" data-toggle="modal" data-target="#modal-information">
                    <div class="infobox">
                        <div class="left">
                            <i class="fa fa-info bg-dark"></i>
                        </div>
                        <div class="right">
                            <div class="clearfix">
                                <div>
                                    <span class="c-dark pull-left">System</span>
                                </div>
                                <div class="txt c-dark">Information</div>
                            </div>
                        </div>
                    </div>
                </a>
                <a href="#" data-toggle="modal" data-target="#modal-logout-right">
                    <div class="infobox">
                        <div class="left">
                            <i class="icon-power bg-red"></i>
                        </div>
                        <div class="right">
                            <div class="clearfix">
                                <div>
                                    <span class="c-red pull-left">Logout</span>
                                </div>
                                <div class="txt c-red">System</div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <script>
        changeActive(1);
    </script>

</div>
